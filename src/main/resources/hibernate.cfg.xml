<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
    <property name="hibernate.connection.url">jdbc:mysql://192.168.0.104:3306/simplemvc?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">simplemvc</property>
    <property name="hibernate.connection.password">mypassword</property>
    
    <mapping class="org.itstep.java.web.diplom2.model.User"/>
  </session-factory>
</hibernate-configuration>
